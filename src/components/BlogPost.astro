---
const { url, title, date } = Astro.props;

let newdate = new Date(Date.parse(date));
let dateString = newdate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "2-digit",
  day: "2-digit",
});
---

<li>
  <a class="container" href={url}>
    <span class="pubDate">{dateString}</span>
    <span>{title}</span>
    <span class="readmore">read more</span>
  </a>
</li>
<style>
  li {
    font-size: 1.3rem;
    padding: 0.2rem;
    list-style: none;
    border-bottom: 1px solid #4b5563;
  }

  .container {
    display: flex;
    align-items: center;
    color: #e5e7eb;
    text-decoration: none;
    padding-bottom: 0.2rem;
    padding-top: 0.2rem;
  }

  li:hover .container {
    transform: scale(1.01);
    transition: transform 0.3s ease-in-out;
  }

  .pubDate {
    color: #6b7280;
    font-size: 1.1rem;
    font-weight: 400;
    margin-right: 0.8rem;
  }

  .readmore {
    color: #6b7280;
    font-size: 1rem;
    font-weight: 400;
    margin-left: auto;
  }
</style>
